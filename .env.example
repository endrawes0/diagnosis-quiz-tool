# Flask Application Configuration
# Copy this file to .env and fill in your actual values
# For quick academic demo: just set REQUIRE_AUTH=False and you're ready!

# ============================================================================
# AUTHENTICATION (Optional for Academic Use)
# ============================================================================
REQUIRE_AUTH=False
# Set to False for academic/demo mode - no login required!
# Set to True if you want user authentication enabled

# Secret Keys (only needed if REQUIRE_AUTH=True)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ============================================================================
# DATA & STORAGE
# ============================================================================
DATA_DIR=data
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
# Max file size in bytes (default: 16MB = 16777216)

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/api.log

# ============================================================================
# ACADEMIC/DEMO MODE
# ============================================================================
DEMO_MODE=True
# If True, enables helpful features for demonstrations
# - Sample data preloaded
# - Anonymous usage allowed
# - Simplified UI flows
